<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_checked="true">
        <shape xmlns:android="http://schemas.android.com/apk/res/android"
            android:shape="rectangle">
            <gradient android:startColor="#29b6f6" android:endColor="#29b6f6" android:angle="270"/>
            <stroke android:width="4px" android:color="#29b6f6" />
            <corners android:radius="3dp"/>
            <size android:height="20dp" android:width="20dp"/>
        </shape>
    </item>

    <item android:state_pressed="true">
        <shape xmlns:android="http://schemas.android.com/apk/res/android"
            android:shape="rectangle">

            <gradient android:startColor="#ff000000" android:endColor="#ff000000" android:angle="270"/>
            <stroke android:width="4px" android:color="#ff000000" />
            <corners android:radius="3dp"/>
            <size android:height="20dp" android:width="20dp"/>
        </shape>
    </item>


    <item android:state_checked="false">
        <shape xmlns:android="http://schemas.android.com/apk/res/android"
            android:shape="rectangle">

            <gradient android:startColor="#11000000" android:endColor="#11000000" android:angle="270"/>
            <stroke android:width="4px" android:color="#ff29b6f6" />
            <corners android:radius="3dp"/>
            <size android:height="20dp" android:width="20dp"/>
        </shape>
    </item>

</selector>