<?xml version="1.0" encoding="utf-8"?>
    <selector xmlns:android="http://schemas.android.com/apk/res/android">
        <item android:state_pressed="true">

            <layer-list>
                <!-- SHADOW -->
                <item>
                    <shape>
                        <solid android:color="#68c3ed"/>
                        <corners android:radius="5dp"/>
                    </shape>
                </item>
                <!-- BUTTON -->
                <item android:bottom="5px">
                    <shape>
                        <padding android:bottom="5dp"/>
                        <gradient
                            android:startColor="#6cc9f5"
                            android:endColor="#6cc9f5"
                            android:angle="270" />
                        <corners
                            android:radius="5dp"/>
                        <padding
                            android:left="10dp"
                            android:top="10dp"
                            android:right="10dp"
                            android:bottom="10dp"/>
                    </shape>
                </item>
            </layer-list>

        </item>

        <item>
        <layer-list>
            <!-- SHADOW -->
            <item>
                <shape>
                    <solid android:color="@color/md_light_blue_400"/>
                    <corners android:radius="5dp"/>
                </shape>
            </item>

            <!-- BUTTON -->
            <item android:bottom="5px">
                <shape>
                    <padding android:bottom="5dp"/>
                    <gradient
                        android:startColor="@color/md_light_blue_500"
                        android:endColor="@color/md_light_blue_600"
                        android:angle="270" />
                    <corners
                        android:radius="5dp"/>
                    <padding
                        android:left="15dp"
                        android:top="5dp"
                        android:right="15dp"
                        android:bottom="5dp"/>
                </shape>
            </item>
        </layer-list>

    </item>



</selector>