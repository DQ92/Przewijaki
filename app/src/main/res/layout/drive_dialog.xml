<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical"
    android:padding="25dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginBottom="20dp">

        <ImageView
            android:id="@+id/car_iv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:paddingRight="10dp"
            android:layout_centerVertical="true"
            android:src="@drawable/car_ico" />

        <TextView
            android:id="@+id/tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_toEndOf="@+id/car_iv"
            android:layout_toRightOf="@+id/car_iv"
            android:text="Dystans:"
            android:layout_centerVertical="true"
            android:textSize="@dimen/text_size_dialog_drive"  />

        <TextView
            android:id="@+id/distance_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:text="--"
            android:layout_centerVertical="true"
            android:textSize="@dimen/text_size_dialog_drive" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true">

        <ImageView
            android:id="@+id/time_im"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:paddingRight="10dp"
            android:layout_centerVertical="true"
            android:src="@drawable/time_drive_ico" />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Dojazd:"
            android:layout_alignParentTop="true"
            android:layout_toEndOf="@+id/time_im"
            android:layout_toRightOf="@+id/time_im"
            android:layout_centerVertical="true"
            android:textSize="@dimen/text_size_dialog_drive"  />

        <TextView
            android:id="@+id/duration_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="--"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:textSize="@dimen/text_size_dialog_drive"  />

    </RelativeLayout>


</LinearLayout>